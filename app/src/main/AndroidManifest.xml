<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="anwarabdullahn.com.villacorp_apps">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission
            android:name="android.permission.MEDIA_CONTENT_CONTROL"
            tools:ignore="ProtectedPermissions"/>

    <uses-feature
            android:name="android.hardware.camera.any"
            android:required="true"/>
    <uses-feature
            android:name="android.hardware.camera.autofocus"
            android:required="false"/>

    <application
            android:name=".Initialize"
            android:allowBackup="true"
            android:icon="@mipmap/ic_apps"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_apps_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".Activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".Activity.DashboardActivity"
                android:label="@string/title_activity_dashboard">
        </activity>
        <activity
                android:name=".Activity.PesanDetailActivity"
                android:theme="@style/AppTheme">
        </activity>
        <activity
                android:name=".Activity.TukarLibur.TukarLiburActivity"
                android:label="@string/title_activity_tukar_libur"
                android:theme="@style/AppTheme">
        </activity>
        <activity
                android:name=".Activity.TukarLibur.DoTukarLiburActivity"
                android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".Activity.TukarLibur.DoTukarLiburDetail">
        </activity>
        <activity android:name=".Activity.InOut.InOutActivity">
        </activity>
        <activity android:name=".Activity.InOut.DoInOutActivity">
        </activity>
        <activity android:name=".Activity.InOut.DoInOutDetail">
        </activity>
        <activity android:name=".Activity.DOP.DOPActivity">
        </activity>
        <activity android:name=".Activity.DOP.DoDOPInActivity">
        </activity>
    </application>

</manifest>