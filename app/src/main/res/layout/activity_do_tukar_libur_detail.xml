<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".Activity.TukarLibur.DoTukarLiburDetail">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Diupdate Oleh"
              android:id="@+id/updatedByPengajuanTukarLiburLabel"
              android:textSize="16dp"
              android:textAlignment="textStart"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="16dp" android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/alasanPengajuanTxt"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Diupdate Oleh"
              android:id="@+id/updatedByPengajuanTukarLiburTxt"
              android:textSize="16dp"
              android:textAlignment="textEnd"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="16dp"
              app:layout_constraintTop_toTopOf="@+id/updatedByPengajuanTukarLiburLabel" android:textColor="@color/colorAccent"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Alasan Pengajuan :"
              android:id="@+id/textView41"
              android:textSize="16dp"
              android:textAlignment="textStart"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
              android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView31"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Alasan ditolak :"
              android:id="@+id/alasanDitolakLabelPengajuanTukarLibur"
              android:textSize="16dp"
              android:textAlignment="textStart"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
              android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/updatedByPengajuanTukarLiburLabel"/>
    <android.support.v7.widget.Toolbar android:layout_width="match_parent"
                                       android:background="@color/colorWhite"
                                       android:layout_height="wrap_content"
                                       app:layout_constraintTop_toTopOf="parent"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintStart_toStartOf="parent" android:id="@+id/toolbarDoTukarLiburDetail"
                                       app:layout_constraintHorizontal_bias="0.0">

    </android.support.v7.widget.Toolbar>


    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/colorBg"
          app:layout_constraintTop_toBottomOf="@+id/toolbarDoTukarLiburDetail" app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent" android:id="@+id/view9"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tanggal Lama"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="16dp" android:id="@+id/textView32"
              android:textSize="16dp"
              android:textAlignment="textStart" android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/doPengajuanInputDate"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nomor"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="16dp" android:id="@+id/textView33"
              android:textSize="16dp" android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/view9"
              android:textAlignment="textStart"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tanggal Dibuat"
              android:id="@+id/textView35"
              android:textSize="16dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
              android:textAlignment="textStart" android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/inputByPengajuanTxt"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dibuat Oleh"
              android:id="@+id/textView37"
              android:textSize="16dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
              android:textAlignment="textStart" android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/statusPengajuanTxt"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Status"
              android:id="@+id/textView39"
              android:textSize="16dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
              android:textAlignment="textStart" android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/nomorPengajuanTxt"/>
    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="Input By"
              android:id="@+id/inputByPengajuanTxt"
              android:textSize="16dp"
              android:textColor="@color/colorAccent"
              android:textAlignment="textEnd"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/textView37"
              android:layout_marginStart="16dp"
              app:layout_constraintTop_toTopOf="@+id/textView37"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Status"
              android:id="@+id/statusPengajuanTxt"
              android:textSize="16dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:paddingHorizontal="5dp"
              android:paddingVertical="1dp"
              android:textAlignment="center"
              android:layout_marginEnd="16dp" android:textColor="@color/colorWhite"
              app:layout_constraintTop_toTopOf="@+id/textView39"/>
    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="Input Date"
              android:id="@+id/doPengajuanInputDate"
              android:textSize="16dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="16dp"
              android:textColor="@color/colorAccent"
              android:textAlignment="textEnd" app:layout_constraintStart_toEndOf="@+id/textView35"
              android:layout_marginStart="16dp"
              app:layout_constraintTop_toTopOf="@+id/textView35"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="nomorTxt"
              android:id="@+id/nomorPengajuanTxt"
              android:textSize="16dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
              app:layout_constraintTop_toBottomOf="@+id/toolbarDoTukarLiburDetail" android:textColor="@color/colorAccent"
              android:textAlignment="textEnd"/>
    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="Tanggal Lama"
              android:id="@+id/doPengajuanOldDateTxt" android:textColor="@color/colorAccent"
              android:textAlignment="textEnd"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="16dp" android:textSize="16dp"
              app:layout_constraintStart_toEndOf="@+id/textView32" android:layout_marginStart="16dp"
              app:layout_constraintTop_toTopOf="@+id/textView32"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tanggal Baru"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="16dp" android:id="@+id/textView31"
              android:textSize="16dp"
              android:textAlignment="textStart" android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/doPengajuanOldDateTxt"/>
    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="Tanggal Baru"
              android:id="@+id/doPengajuanNewDateTxt" android:textColor="@color/colorAccent"
              android:textSize="16dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="16dp"
              android:textAlignment="textEnd" app:layout_constraintStart_toEndOf="@+id/textView31"
              android:layout_marginStart="16dp"
              app:layout_constraintTop_toTopOf="@+id/textView31"/>
    <EditText android:layout_width="0dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
              android:layout_height="wrap_content"
              android:inputType="text|textMultiLine"
              android:focusable="false"
              android:enabled="false"
              android:textColorHint="@color/colorAccent"
              android:gravity="top"
              android:layout_marginEnd="16dp" android:textSize="16dp"
              android:textAlignment="viewStart"
              android:hint="Alasan " android:id="@+id/alasanPengajuanTxt" tools:ignore="RtlCompat"
              android:selectAllOnFocus="false"
              android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView41"
              app:layout_constraintHorizontal_bias="0.0"/>

    <EditText android:layout_width="0dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
              android:layout_height="wrap_content"
              android:inputType="text|textMultiLine"
              android:focusable="false"
              android:enabled="false"
              android:textColorHint="@color/colorAccent"
              android:gravity="top"
              android:layout_marginEnd="16dp" android:textSize="16dp"
              android:textAlignment="viewStart"
              android:hint="Alasan " android:id="@+id/alasanPengajuanTxt2" tools:ignore="RtlCompat"
              android:selectAllOnFocus="false"
              app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="16dp"
              app:layout_constraintTop_toBottomOf="@+id/alasanDitolakLabelPengajuanTukarLibur" android:visibility="visible"/>
    <Button android:layout_width="0dp" android:layout_height="wrap_content" android:text="Cancel Proses"
            android:textSize="16sp"
            android:background="@drawable/circle_menu_red" android:textColor="@color/colorWhite"
            android:paddingStart="7dp" android:paddingEnd="7dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/doPengajuanSubmitBtn"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/alasanPengajuanTxt2"/>


    <com.wang.avi.AVLoadingIndicatorView android:layout_width="90dp" android:layout_height="90dp"
                                         app:layout_constraintBottom_toBottomOf="parent"
                                         app:layout_constraintEnd_toEndOf="parent"
                                         android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                                         android:layout_marginStart="8dp" android:id="@+id/loadingDoTukarJadwal"
                                         android:visibility="gone"
                                         app:indicatorName="PacmanIndicator"
                                         app:indicatorColor="@color/colorAccent"
                                         app:layout_constraintHorizontal_bias="0.498" android:layout_marginBottom="8dp"
                                         android:layout_marginTop="8dp"
                                         app:layout_constraintTop_toTopOf="@+id/toolbarDoTukarLibur"/>


</android.support.constraint.ConstraintLayout>