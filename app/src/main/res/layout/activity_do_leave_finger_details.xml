<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".Activity.LeaveFinger.DoLeaveFingerDetails">

    <android.support.v7.widget.Toolbar android:layout_width="match_parent"
                                       android:background="@color/colorWhite"
                                       android:layout_height="wrap_content"
                                       app:layout_constraintTop_toTopOf="parent"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintStart_toStartOf="parent" android:id="@+id/toolbar"
                                       app:layout_constraintHorizontal_bias="0.0"/>
    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/colorBg"
          app:layout_constraintTop_toBottomOf="@+id/toolbar" app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent" android:id="@+id/view9"/>

    <ScrollView android:layout_width="0dp" android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/view9" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent">
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="match_parent">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Diselesaikan Oleh"
                      android:id="@+id/updateLabel"
                      android:textSize="16dp"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                      android:textAlignment="textStart"
                      android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/inputByTxt"/>
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="Update By"
                      android:id="@+id/updateTxtBy"
                      android:textSize="16dp"
                      android:textColor="@color/colorAccent"
                      android:textAlignment="textEnd"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginEnd="16dp"
                      app:layout_constraintStart_toEndOf="@+id/updateLabel"
                      android:layout_marginStart="16dp"
                      app:layout_constraintTop_toTopOf="@+id/updateLabel"
            />
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="Input By"
                      android:id="@+id/namaTxt"
                      android:textSize="16dp"
                      android:textColor="@color/colorAccent"
                      android:textAlignment="textEnd"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginEnd="16dp"
                      app:layout_constraintTop_toTopOf="@+id/textView43"
                      app:layout_constraintStart_toEndOf="@+id/textView43" android:layout_marginStart="8dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Nama"
                      android:id="@+id/textView43"
                      android:textSize="16dp"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                      android:textAlignment="textStart"
                      android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/statusTxt"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tipe"
                      android:id="@+id/textView42"
                      android:textSize="16dp"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                      android:textAlignment="textStart"
                      android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/namaTxt"/>
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="Type"
                      android:id="@+id/typeTxt"
                      android:textSize="16dp"
                      android:textColor="@color/colorAccent"
                      android:textAlignment="textEnd"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginEnd="16dp"
                      app:layout_constraintStart_toEndOf="@+id/textView42"
                      android:layout_marginStart="16dp"
                      app:layout_constraintTop_toTopOf="@+id/textView42"/>

            <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                       android:src="@drawable/ic_dashboard"
                       android:id="@+id/imagesContainer" app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                       android:scaleType="fitCenter"
                       android:adjustViewBounds="true" android:cropToPadding="true"
                       app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                       android:visibility="visible"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nomor"
                      app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginStart="16dp" android:id="@+id/textView33"
                      android:textSize="16dp"
                      android:textAlignment="textStart" android:layout_marginTop="8dp"
                      app:layout_constraintTop_toBottomOf="@+id/imagesContainer"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="nomorTxt"
                      android:id="@+id/nomorTxt"
                      android:textSize="16dp" app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginEnd="16dp"
                      android:textColor="@color/colorAccent"
                      android:textAlignment="textEnd" android:layout_marginTop="8dp"
                      app:layout_constraintTop_toBottomOf="@+id/imagesContainer"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Status"
                      android:id="@+id/textView39"
                      android:textSize="16dp"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                      android:textAlignment="textStart" android:layout_marginTop="8dp"
                      app:layout_constraintTop_toBottomOf="@+id/nomorTxt"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Status"
                      android:id="@+id/statusTxt"
                      android:textSize="16dp"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:paddingHorizontal="5dp"
                      android:paddingVertical="1dp"
                      android:textAlignment="center"
                      android:layout_marginEnd="16dp" android:textColor="@color/colorWhite"
                      app:layout_constraintTop_toTopOf="@+id/textView39"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Dibuat Oleh"
                      android:id="@+id/textView37"
                      android:textSize="16dp"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                      android:textAlignment="textStart"
                      android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/alasanTxt"/>

            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="Input By"
                      android:id="@+id/inputByTxt"
                      android:textSize="16dp"
                      android:textColor="@color/colorAccent"
                      android:textAlignment="textEnd"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/textView37"
                      android:layout_marginStart="16dp"
                      app:layout_constraintTop_toTopOf="@+id/textView37"
                      app:layout_constraintHorizontal_bias="0.0"
            />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Tanggal"
                      android:id="@+id/textView35"
                      android:textSize="16dp"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                      android:textAlignment="textStart"
                      android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView42"/>

            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="Input Date"
                      android:id="@+id/dateTxt"
                      android:textSize="16dp" app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginEnd="16dp"
                      android:textColor="@color/colorAccent"
                      android:textAlignment="textEnd" app:layout_constraintStart_toEndOf="@+id/textView35"
                      android:layout_marginStart="16dp"
                      app:layout_constraintTop_toTopOf="@+id/textView35"/>

            <TextView android:layout_width="wrap_content" android:layout_height="0dp" android:text="Alasan Pengajuan :"
                      android:id="@+id/textView41"
                      android:textSize="16dp"
                      android:textAlignment="textStart"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                      android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView35"/>

            <TextView android:layout_width="wrap_content" android:layout_height="0dp" android:text="Alasan Ditolak"
                      android:id="@+id/rejectLabel"
                      android:textSize="16dp"
                      android:textAlignment="textStart"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                      android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/updateLabel"/>
            <EditText android:layout_width="0dp"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
                      android:layout_height="wrap_content"
                      android:inputType="text|textMultiLine"
                      android:focusable="false"
                      android:enabled="false"
                      android:textColorHint="@color/colorAccent"
                      android:gravity="top"
                      android:layout_marginEnd="16dp" android:textSize="16dp"
                      android:textAlignment="viewStart"
                      android:hint="Alasan " android:id="@+id/alasanTxt" tools:ignore="RtlCompat"
                      android:selectAllOnFocus="false"
                      android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView41"
                      app:layout_constraintHorizontal_bias="0.0"
            />
            <EditText android:layout_width="0dp"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
                      android:layout_height="wrap_content"
                      android:inputType="text|textMultiLine"
                      android:focusable="false"
                      android:enabled="false"
                      android:textColorHint="@color/colorAccent"
                      android:gravity="top"
                      android:layout_marginEnd="16dp" android:textSize="16dp"
                      android:textAlignment="viewStart"
                      android:hint="Alasan Ditolak" android:id="@+id/rejectTxt" tools:ignore="RtlCompat"
                      android:selectAllOnFocus="false"
                      app:layout_constraintHorizontal_bias="1.0"
                      android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/rejectLabel"
            />

            <Button android:layout_width="0dp" android:layout_height="wrap_content" android:text="Cancel Proses"
                    android:textSize="16sp"
                    android:background="@drawable/circle_menu_red" android:textColor="@color/colorWhite"
                    android:paddingStart="7dp" android:paddingEnd="7dp"
                    android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/doCancelBtn"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/rejectTxt"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>



        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>