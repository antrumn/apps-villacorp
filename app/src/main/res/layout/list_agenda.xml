<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <android.support.v7.widget.CardView android:layout_width="300dp" android:layout_height="wrap_content"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                                        android:id="@+id/agendaContainer">
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="match_parent">
            <TextView android:layout_width="0dp" android:layout_height="25dp" android:text="Remark"
                      app:layout_constraintTop_toTopOf="parent" android:textAllCaps="true"
                      android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginStart="16dp" android:textStyle="bold|italic"
                      android:textAlignment="viewStart"
                      android:textSize="18sp" android:id="@+id/remarkTxt"
                      app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            />

            <View android:layout_width="10dp" android:layout_height="0dp" android:background="#ff0000"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:id="@+id/sideView"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Date"
                      app:layout_constraintStart_toEndOf="@+id/hariTxt"
                      android:id="@+id/dateTxt" app:layout_constraintTop_toTopOf="@+id/hariTxt"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Hari"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                      android:id="@+id/hariTxt" android:layout_marginTop="8dp"
                      app:layout_constraintTop_toBottomOf="@+id/ruangTxt"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Mulai"
                      app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginStart="16dp" android:layout_marginTop="8dp"
                      app:layout_constraintTop_toBottomOf="@+id/hariTxt" android:id="@+id/mulaiTxt"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Selesai"
                      app:layout_constraintStart_toEndOf="@+id/mulaiTxt"
                      android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/hariTxt"
                      android:id="@+id/selesaiTxt"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dept"
                      android:layout_marginTop="8dp"
                      app:layout_constraintTop_toBottomOf="@+id/mulaiTxt"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                      app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
                      android:id="@+id/depTxt"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ruangan"
                      android:layout_marginTop="8dp"
                      app:layout_constraintTop_toBottomOf="@+id/remarkTxt"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                      android:id="@+id/ruangTxt"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>